<?xml version="1.0" encoding="UTF-8"?>
<Context path="/TOBA">
    
    <Resource name="jdbc/toba_db" auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/toba_db?autoReconnect=true"
        username="root" password="sesame"
        maxActive="100" maxIdle="30" maxWait="10000"
        logAbandoned="true" removeAbandoned="true"
        removeAbandonedTimeout="60" type="javax.sql.DataSource"/>
    
    <Realm className="org.apache.catalina.realm.DataSourceRealm" debug="99"
        dataSourceName="jdbc/toba_db" localDataSource="true"
        userTable="UserPass" userNameCol="Username" userCredCol="Password"
        userRoleTable="UserRole" roleNameCol="Rolename" />
</Context>